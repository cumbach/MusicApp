<% action = (band.persisted? ? band_url(band) : bands_url) %>
<% method = (band.persisted? ? :patch : :post) %>

<form action="<%= action %>" method="post">
  <input type="hidden" name="_method" value="<%= method %>">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <label for="band_band_name">Name</label>
  <input
    type="text"
    name="band[band_name]"
    id="band_name"
    value="<%= band.band_name %>">

  <% if method == :patch %>
  <%= link_to "delete", band_url(band), method: 'delete', data: {confirm: "message"} %>

  <% end %>


  <% submit_text = (band.persisted? ? 'Update' : 'Create') + ' band!' %>
  <input type="submit" value="<%= submit_text %>">
</form>
